<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <import type="android.view.View" />

        <variable
            name="isLoading"
            type="boolean" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tv_debtstracker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:text="@string/debts_tracker"
                android:textSize="30sp"/>

            <LinearLayout
                android:id="@+id/ll_view"
                android:layout_below="@+id/tv_debtstracker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp">

                <View
                    android:layout_width="60dp"
                    android:layout_margin="10dp"
                    android:layout_height="1dp"
                    android:alpha="0.5"
                    android:background="@color/colorDarkGrey"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/log_in"
                    android:textSize="10sp"
                    android:layout_gravity="center_vertical"
                    tools:ignore="SmallSp" />

                <View
                    android:layout_width="60dp"
                    android:layout_margin="10dp"
                    android:layout_height="1dp"
                    android:alpha="0.5"
                    android:background="@color/colorDarkGrey"
                    />

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_email"
                style="@style/EditTextSimpleStyle"
                android:layout_below="@+id/ll_view"
                android:hint="@string/email_or_username"
                android:layout_marginTop="60dp"
                android:inputType="textEmailAddress" />


            <RelativeLayout
                android:id="@+id/ll_pass"
                android:layout_below="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_pass_login"
                    android:hint="@string/password_login"
                    style="@style/EditTextSimpleStyle"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:layout_toStartOf="@id/btn_pass_eye"/>

                <Button
                    android:id="@+id/btn_pass_eye"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_eye" />

            </RelativeLayout>

            <TextView
                android:id="@+id/forgot_password"
                android:layout_below="@id/ll_pass"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                android:text="@string/forgot_password"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/tv_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/no_account_signup_here"
                android:layout_above="@+id/btn_login"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/btn_login"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/log_in"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:layout_marginBottom="10dp"
                />

        </RelativeLayout>

<!--        <com.debts.debtstracker.ui.custom_views.LoadingView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:visibility="@{isLoading ? View.VISIBLE : View.GONE}"-->
<!--            />-->


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
