<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="debt"
            type="com.debts.debtstracker.data.network.model.FriendDebtModel" />
    </data>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_person_full"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <TextView
                android:id="@+id/tv_creation_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{debt.creation}"
                tools:text="12:43"
                android:textSize="8sp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SmallSp"
                />

            <ImageView
                android:id="@+id/status_picture"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_creation_date"/>
            
            <TextView
                android:id="@+id/tv_sum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                tools:text="16 lei"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="@{Float.toString(debt.sum)}"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_creation_date"
                app:layout_constraintStart_toEndOf="@id/profile_picture"/>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                tools:text="descriere "
                android:textSize="12sp"
                android:text="@{debt.description}"

                app:layout_constraintTop_toBottomOf="@id/tv_sum"
                app:layout_constraintEnd_toStartOf="@id/status_picture"
                app:layout_constraintStart_toEndOf="@id/profile_picture"/>




        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
