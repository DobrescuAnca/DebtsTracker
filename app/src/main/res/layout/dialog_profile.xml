<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>

        <variable
            name="isLoading"
            type="Boolean" />

    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@drawable/bg_5_rounded_corners"
        android:backgroundTint="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minWidth="320dp"
            android:minHeight="360dp"
            android:fitsSystemWindows="true"
            android:padding="30dp"
            app:layout_constrainedHeight="true">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/ubuntu_medium"

                tools:text="Anca Dobrescu"
                android:textSize="18sp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_lent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_lent"
                android:textSize="16sp"
                android:fontFamily="@font/ubuntu_medium"
                android:layout_marginTop="45dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_user_name"/>

            <TextView
                android:id="@+id/tv_lent_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_marginStart="8dp"
                android:padding="6dp"
                tools:text="125.33"

                android:textSize="14sp"
                android:fontFamily="@font/ubuntu_light"
                android:background="@drawable/bg_5_rounded_corners"
                android:backgroundTint="@color/bg_white"

                app:layout_constraintStart_toEndOf="@id/tv_lent"
                app:layout_constraintTop_toTopOf="@id/tv_lent"
                app:layout_constraintBottom_toBottomOf="@id/tv_lent"/>

            <TextView
                android:id="@+id/tv_borrowed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_borrowed"
                android:textSize="16sp"
                android:fontFamily="@font/ubuntu_medium"
                android:layout_marginTop="15dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_lent"/>

            <TextView
                android:id="@+id/tv_borrowed_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_marginStart="8dp"
                android:padding="6dp"
                tools:text="12.33"

                android:textSize="14sp"
                android:fontFamily="@font/ubuntu_light"
                android:background="@drawable/bg_5_rounded_corners"
                android:backgroundTint="@color/bg_white"

                app:layout_constraintStart_toEndOf="@id/tv_borrowed"
                app:layout_constraintTop_toTopOf="@id/tv_borrowed"
                app:layout_constraintBottom_toBottomOf="@id/tv_borrowed"/>


            <TextView
                android:id="@+id/btn_equate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_5_rounded_corners"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/equate"
                android:fontFamily="@font/ubuntu_bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:padding="7dp"
                android:layout_marginBottom="55dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


            <TextView
                android:id="@+id/tv_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/log_out"
                android:textSize="12sp"
                android:textColor="@color/colorSecondary"
                android:fontFamily="@font/ubuntu_medium"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/v_loading_bg"
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:background="@color/greyLightTransparent"
            android:elevation="@{Long.MAX_VALUE - 1}"

            android:visibility="@{isLoading ? View.VISIBLE : View.GONE}"
            tools:visibility="gone"

            android:clickable="true"
            android:focusable="true" />
        <ProgressBar
            android:id="@+id/pb_spinner"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="@{isLoading ? View.VISIBLE : View.GONE}"
            tools:visibility="gone"
            android:elevation="@{Long.MAX_VALUE}"

            android:indeterminate="true"
            android:indeterminateTint="@color/colorPrimary"
            />
    </FrameLayout>


</layout>
