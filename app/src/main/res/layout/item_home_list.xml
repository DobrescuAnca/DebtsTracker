<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
    </data>

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:elevation="1dp"
        android:background="@drawable/bg_5_rounded_corners"
        android:backgroundTint="@color/white">

        <TextView
            android:id="@+id/creationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="22:45"
            android:textSize="12sp"

            android:layout_margin="5dp"
            android:layout_gravity="end"
            tools:ignore="SmallSp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="70dp"
            android:paddingTop="10dp"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_right_arrow"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/iv_status"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_dot"

                app:layout_constraintEnd_toEndOf="@id/iv_arrow"
                app:layout_constraintStart_toEndOf="@id/iv_arrow"
                app:layout_constraintTop_toBottomOf="@id/iv_arrow"
                app:layout_constraintBottom_toBottomOf="@id/iv_arrow"
                tools:ignore="ContentDescription" />
            
            <TextView
                android:id="@+id/tv_sum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"

                tools:text="15.45 lei"
                android:textColor="@color/colorDarkGrey"
                android:textSize="18sp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_arrow"/>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                tools:text="mega"
                android:textSize="13sp"

                app:layout_constraintTop_toBottomOf="@id/tv_sum"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_sum"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>
